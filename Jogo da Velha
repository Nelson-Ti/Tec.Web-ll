      var jogador =0;
      function marcar(posicao){
      //alert marcar(posicao){
      
    
      var conteudo = document.getElementById(posicao).innerHTML;
      console.log(conteudo.trim());
      if ( conteudo.trim() != "Vazio"){
      	alert("nao pode");
      return;
      }
      
      
      if(jogador ==0){
      document.getElementById(posicao).innerHTML="X";
      jogador=1;
      }else{
      document.getElementById(posicao).innerHTML="O";
      jogador =0;
      }
      }
      
      
