    <script>
     var jogador=1; 
	$( document ).ready(function() {
		$(".col-4").click(function(){
		var html = $(this).html();
		if(html == "X" || html=="0"){
			alert("nao pode");
			return;
		}
		if(jogador==1){
		$(this).html("X");
		jogador=0;
		}else{
			$(this).html("O");
		jogador=1;
		}
		});
	});
      </script>
	  
